		</Console>

		<RollingFile name="sigap_cmis_integration"
			fileName="${basePath}/eoficio_cmis.log"
			filePattern="${basePath}/app-%d{yyyy-MM-dd}.log">
			<PatternLayout>
				<pattern>${LOG_PATTERN}</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy
					size="${MAX_SIZE}" />
			</Policies>

			<DefaultRolloverStrategy max="${MAX_LOGS}">
				<Delete basePath="${basePath}" maxDepth="10">

					<IfLastModified age="${MAX_OLD}" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>

