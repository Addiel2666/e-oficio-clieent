	<Properties>
		<Property name="basePath">${sys:catalina.base}/logs</Property>
		<Property name="LOG_PATTERN">[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %C - %msg%n</Property>
		<Property name="MAX_SIZE">128MB</Property>
		<Property name="MAX_LOGS">3</Property>
		<Property name="MAX_OLD">3d</Property>
	</Properties>

